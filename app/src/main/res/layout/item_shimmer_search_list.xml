<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <ImageView
        android:id="@+id/iv_thumbnail_item_shimmer_search_list"
        android:background="@color/shimmer_grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:scaleType="centerCrop"
        android:layout_width="90dp"
        android:layout_height="90dp"/>

    <TextView
        android:id="@+id/tv_title_item_shimmer_search_list"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="2dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/tv_channel_date_item_shimmer_search_list"
        app:layout_constraintLeft_toRightOf="@+id/iv_thumbnail_item_shimmer_search_list"
        android:textColor="@color/white"
        android:background="@color/shimmer_grey"
        android:textStyle="bold"
        app:layout_constraintVertical_chainStyle="packed"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_width="240dp"
        android:layout_height="32dp"/>

    <TextView
        android:id="@+id/tv_channel_date_item_shimmer_search_list"
        app:layout_constraintLeft_toRightOf="@+id/iv_thumbnail_item_shimmer_search_list"
        app:layout_constraintTop_toBottomOf="@+id/tv_title_item_shimmer_search_list"
        app:layout_constraintBottom_toBottomOf="parent"
        android:textColor="@android:color/darker_gray"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:maxLines="1"
        android:background="@color/shimmer_grey"
        android:ellipsize="end"
        android:textSize="12sp"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>